<link rel="stylesheet" type="text/css" href="css/h.css" />

<style>

    .wrapper {
        width: 800px;
        margin-top: 120px;
        margin-left: 80px;
        height: 400px;
        border: solid;
        position: center;
        border-radius: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #ffda61;
    }


</style>




<div class="wrapper">


    <div style="align-items:center" class="item">Chess Lover</div>
    <div style="align-items:center" class="item">Spectator of Nature</div>
    <div style="align-items:center" class="item">Digging of History</div>
</div>
     


<script>

    const items = Array.from(document.getElementsByClassName('item'));

    items.forEach((item, i) => {
        let prev = items[i - 1];
        if (!prev) prev = items[items.length - 1];

        prev.addEventListener('animationend', () => {
            item.classList.add('animate');
            prev.classList.remove('animate');
        });
    })

    items[0].classList.add('animate');


</script>